
import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    {
	    int n;
	    int f=0;
	    n=sc.nextInt();
	    int arr[] = new int[n];
	    for(int i=0;i<n;i++)
	    arr[i]=sc.nextInt();
	    int max=arr[0],temp=0;
		 
	    for(int i=0;i<n;i++)
	    System.out.print(arr[i]);
	    for (int i=0; i<=n-2; i++)  
        {  
        if (f==0)  
        {  
        if (arr[i] > arr[i+1])  
        {  
        temp = arr[i];  
        arr[i] = arr[i+1];  
        arr[i+1] = temp;  
        }  
        }  
        else  
        {  
        if (arr[i] < arr[i+1])  
        {  
        temp = arr[i];  
        arr[i] = arr[i+1];  
        arr[i+1] = temp;  
        }  
        }  
        if(f==0)  
        f=1;  
        else  
        f=0;  
        }  
	       
	     System.out.println();
	       for(int i=0;i<n;i++)
	    System.out.print(arr[i]); 
	    }
	}
}
